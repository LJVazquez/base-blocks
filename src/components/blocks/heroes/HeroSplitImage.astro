---
import '@shared/css/fade-in-up.css';

const {
	title,
	subtitle,
	ctaText,
	ctaPrimaryLink,
	ctaPrimaryButton,
	ctaSecondaryLink,
	ctaSecondaryButton,
	imageSrc,
	imageAlt,
	imagePosition = 'right',
	announcementLink,
	announcementText,
} = Astro.props;
---

<section class="hero-section position-relative overflow-hidden mb-5">
	<div class="hero-overlay position-absolute top-0 start-0 w-100 h-100"></div>

	<div class="container position-relative h-100">
		<div class="row h-100 align-items-center">
			<div
				class={`col-lg-6 ${imagePosition === 'left' ? 'order-lg-2 text-end' : 'order-lg-1 text-start'} order-1`}
			>
				{
					announcementText && (
						<div class="mb-4 fade-in">
							<a
								class="icon-link icon-link-hover badge border border-secondary fw-light p-2 text-decoration-none"
								href={announcementLink}
								role="button"
							>
								{announcementText}
								<svg
									xmlns="http://www.w3.org/2000/svg"
									class="bi"
									viewBox="0 0 16 16"
									aria-hidden="true"
								>
									<path d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
								</svg>
							</a>
						</div>
					)
				}

				<h1 class="display-2 fw-bold text-white mb-4 fade-in-delay">
					{title}
				</h1>

				<p class="lead text-white fade-in-delay-2">
					{subtitle}
				</p>

				<div class="fade-in-delay-2 mb-5">
					<p class="h5 text-white mb-4">{ctaText}</p>
					<div
						class={`d-flex gap-3 flex-wrap ${imagePosition === 'left' ? 'justify-content-end' : 'justify-content-start'}`}
					>
						<a href={ctaPrimaryLink} class="btn btn-primary btn-lg px-4 py-3">
							{ctaPrimaryButton}
						</a>
						<a
							href={ctaSecondaryLink}
							class="btn btn-outline-light btn-lg px-4 py-3"
						>
							{ctaSecondaryButton}
						</a>
					</div>
				</div>
			</div>

			<div
				class={`col-lg-6 ${imagePosition === 'left' ? 'order-lg-1' : 'order-lg-2'} text-center order-2`}
			>
				<div class="fade-in-delay-3">
					<img
						src={imageSrc}
						alt={imageAlt}
						class="img-fluid rounded hero-image pb-sm-5 pb-m-0"
					/>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.hero-section {
		height: 80vh;
		min-height: 500px;
		max-height: 700px;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #2d1b69 100%);
	}

	.hero-overlay {
		background: rgba(0, 0, 0, 0.3);
		z-index: 1;
	}

	.container {
		z-index: 2;
	}

	.badge {
		transition: all 0.3s ease;
	}

	.badge:hover {
		background: rgba(255, 255, 255, 0.15);
		color: white;
		transform: translateY(-1px);
	}

	.hero-image {
		max-width: 100%;
		height: auto;
		max-height: 400px;
		object-fit: contain;
	}

	@media (max-width: 991.98px) {
		.hero-section {
			height: auto;
			min-height: 600px;
			padding: 3rem 0;
		}

		.hero-image {
			max-height: 300px;
			width: 85%;
		}
	}

	@media (max-width: 575.98px) {
		.hero-image {
			max-height: 250px;
			width: 80%;
		}
	}
</style>
