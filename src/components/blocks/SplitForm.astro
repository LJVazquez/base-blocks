---
export interface Props {
	title?: string;
	message?: string;
	formAction?: string;
	formMethod?: string;
	nameLabel?: string;
	lastnameLabel?: string;
	emailLabel?: string;
	messageLabel?: string;
	submitText?: string;
	className?: string;
}

const {
	title = 'Contáctanos',
	message = 'Nos encantaría conocer tu opinión y responder a tus preguntas.',
	formAction = '#',
	formMethod = 'POST',
	nameLabel = 'Nombre',
	lastnameLabel = 'Apellido',
	emailLabel = 'Email',
	messageLabel = 'Mensaje',
	submitText = 'Enviar',
} = Astro.props;
---

<section class="mb-5">
	<div class="container">
		<div class="row g-4">
			<div class="col-lg-6">
				<div class="h-100 d-flex flex-column justify-content-center">
					<h2 class="display-5 fw-bold mb-4">{title}</h2>
					<p class="lead text-muted">{message}</p>
				</div>
			</div>

			<div class="col-lg-6">
				<div class="card bg-light p-4 p-lg-5 rounded-3">
					<form action={formAction} method={formMethod}>
						<div class="row g-3 mb-3">
							<div class="col-md-6">
								<label for="name" class="form-label">{nameLabel}</label>
								<input
									type="text"
									class="form-control"
									id="name"
									name="name"
									required
								/>
							</div>
							<div class="col-md-6">
								<label for="lastname" class="form-label">{lastnameLabel}</label>
								<input
									type="text"
									class="form-control"
									id="lastname"
									name="lastname"
									required
								/>
							</div>
						</div>

						<div class="mb-3">
							<label for="email" class="form-label">{emailLabel}</label>
							<input
								type="email"
								class="form-control"
								id="email"
								name="email"
								required
							/>
						</div>

						<div class="mb-4">
							<label for="message" class="form-label">{messageLabel}</label>
							<textarea
								style="resize: none;"
								class="form-control"
								id="message"
								name="message"
								rows="5"
								required
							>
							</textarea>
						</div>

						<div class="d-grid">
							<button type="submit" class="btn btn-primary btn-lg">
								{submitText}
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
