---
import { User, DollarSign, ReceiptText, Package } from '@lucide/astro';
import Layout from '@layouts/Layout.astro';
import HeroParallaxSimpleLeft from '@components/blocks/heroes/HeroParallaxSimpleLeft.astro';
import HeroParallaxSimpleCenteredAnnouncement from '@components/blocks/heroes/HeroParallaxSimpleCenteredAnnouncement.astro';
import KPI from '@components/blocks/KPI.astro';
import SplitForm from '@components/blocks/SplitForm.astro';
import SliderShowcase from '@components/SliderShowcase.astro';
import HeroSplitImage from '@components/blocks/heroes/HeroSplitImage.astro';
import DiagonalDivider from '@components/blocks/heroes/dividers/DiagonalDivider.astro';

const mockHeroData = {
	title: 'Test title',
	subtitle:
		'This is a subtitle that provides additional context and information about the hero section.',
	backgroundImage:
		'https://images.pexels.com/photos/161959/prehistoric-times-urtier-museum-exhibit-161959.jpeg',
	ctaText: 'Ready to get started?',
	ctaPrimaryButton: 'Get Started',
	ctaSecondaryButton: 'Learn More',
	ctaPrimaryLink: '#',
	ctaSecondaryLink: '#',
	announcementLink: '#',
	announcementText: 'Announcement text',
};

const mockDividerData = {
	topColor: 'bg-white',
	bottomColor: 'bg-black',
	direction: 'right-to-left',
	height: 100,
};

const heroComponents = [
	{
		name: 'Hero Parallax Simple Left',
		component: HeroParallaxSimpleLeft,
		variants: [
			{ name: 'default', props: mockHeroData },
			{
				name: 'no image',
				props: { ...mockHeroData, backgroundImage: null },
			},
		],
	},
	{
		name: 'Hero Parallax Simple Centered Announcement',
		component: HeroParallaxSimpleCenteredAnnouncement,
		variants: [
			{ name: 'default', props: mockHeroData },
			{ name: 'no image', props: { ...mockHeroData, backgroundImage: null } },
			{
				name: 'no announcement',
				props: { ...mockHeroData, announcementText: null },
			},
			{
				name: 'no image & no announcement',
				props: {
					...mockHeroData,
					backgroundImage: null,
					announcementText: null,
				},
			},
		],
	},
	{
		name: 'Hero Split Image',
		component: HeroSplitImage,
		variants: [
			{
				name: 'default',
				props: {
					...mockHeroData,
					imageSrc:
						'https://cdn.pixabay.com/photo/2016/02/24/17/30/fruit-1220361_960_720.png',
				},
			},
			{
				name: 'no announcement',
				props: {
					...mockHeroData,
					announcementText: null,
					imageSrc:
						'https://cdn.pixabay.com/photo/2016/02/24/17/30/fruit-1220361_960_720.png',
				},
			},
			{
				name: 'image left',
				props: {
					...mockHeroData,
					imageSrc:
						'https://cdn.pixabay.com/photo/2016/02/24/17/30/fruit-1220361_960_720.png',
					imagePosition: 'left',
				},
			},
			{
				name: 'image left no announcement',
				props: {
					...mockHeroData,
					imagePosition: 'left',
					announcementText: null,
					imageSrc:
						'https://cdn.pixabay.com/photo/2016/02/24/17/30/fruit-1220361_960_720.png',
				},
			},
		],
	},
];

const dividerComponents = [
	{
		name: 'Diagonal',
		component: DiagonalDivider,
		variants: [
			{ name: 'right to left', props: mockDividerData },
			{
				name: 'left to right',
				props: { ...mockDividerData, direction: 'left-to-right' },
			},
			{
				name: 'custom colors',
				props: {
					...mockDividerData,
					topColor: '#ff6b6b',
				},
			},
			{
				name: 'responsive heights',
				props: {
					...mockDividerData,
					height: {
						xs: 60,
						sm: 80,
						md: 100,
						lg: 120,
						xl: 150,
						xxl: 180,
					},
				},
			},
		],
	},
];
---

<Layout>
	<section>
		<h2 class="h1 px-5">Heroes</h2>
		<SliderShowcase items={heroComponents} />
	</section>

	<hr />

	<section>
		<h2 class="h1 px-5">Dividers</h2>
		<SliderShowcase items={dividerComponents} />
		<div class="bg-black text-white p-5">
			<h3>Test section</h3>
			<p>
				Lorem ipsum, dolor sit amet consectetur adipisicing elit. Atque, eius.
			</p>
		</div>
	</section>
</Layout>
